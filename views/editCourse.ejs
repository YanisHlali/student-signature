<%- include('layout') %>

<header class="bg-dark text-white text-center py-3 mb-4">
    <h1>Modifier un Cours</h1>
</header>
<div class="container">
    <form action="/courses/<%= course.id %>/edit?_method=PUT" method="POST">
        <div class="form-group">
            <label for="professor_id">Professeur</label>
            <select class="form-control" id="professor_id" name="user_id" required>
                <% professors.forEach(professor => { %>
                    <option value="<%= professor.id %>" <%= professor.id === course.user_id ? 'selected' : '' %>><%= professor.firstname %> <%= professor.lastname %></option>
                <% }); %>
            </select>
        </div>
        <div class="form-group">
            <label for="subject_id">Sujet</label>
            <select class="form-control" id="subject_id" name="subject_id" required>
                <% subjects.forEach(subject => { %>
                    <option value="<%= subject.id %>" <%= subject.id === course.subject_id ? 'selected' : '' %>><%= subject.name %></option>
                <% }); %>
            </select>
        </div>
        <div class="form-group">
            <label for="promotion_id">Promotion</label>
            <select class="form-control" id="promotion_id" name="promotion_id" required>
                <% promotions.forEach(promotion => { %>
                    <option value="<%= promotion.id %>" <%= promotion.id === course.promotion_id ? 'selected' : '' %>><%= promotion.name %> - <%= promotion.year %></option>
                <% }); %>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Modifier</button>
    </form>
</div>
