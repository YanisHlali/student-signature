<%- include('layout') %>

<div class="container mt-5">
    <h2>Modifier la Promotion</h2>
    <form action="/promotions/<%= promotion.id %>/edit?_method=PUT" method="POST">
        <div class="form-group">
            <label for="name">Nom</label>
            <input type="text" class="form-control" id="name" name="name" value="<%= promotion.name %>" placeholder="<%= promotion.name %>" required>
        </div>
        <div class="form-group">
            <label for="year">Année</label>
            <input type="text" class="form-control" id="year" name="year" value="<%= promotion.year %>" placeholder="<%= promotion.year %>" required>
        </div>
        <div class="form-group">
            <label for="school_id">École</label>
            <select class="form-control" id="school_id" name="school_id" required>
                <% schools.forEach(school => { %>
                    <option value="<%= school.id %>" <%= school.id === promotion.school_id ? 'selected' : '' %>><%= school.name %></option>
                <% }); %>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Modifier</button>
        <a href="/promotions" class="btn btn-secondary">Annuler</a>
    </form>
</div>
