<%- include('layout') %>

<header class="bg-dark text-white text-center py-3 mb-4">
    <h1>Liste des Écoles</h1>
</header>
<div class="container">
    <% if (user && (user.roles.includes('ROLE_PROF') || user.roles.includes('ROLE_ADMIN'))) { %>
    <div class="d-flex justify-content-end mb-4">
        <a href="/schools/create" class="btn btn-success">Ajouter une École</a>
    </div>
    <% } %>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Adresse</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% schools.forEach(school => { %>
                <tr>
                    <td><%= school.name %></td>
                    <td><%= school.address %></td>
                    <td>
                        <% if (user && (user.roles.includes('ROLE_PROF') || user.roles.includes('ROLE_ADMIN'))) { %>
                        <a href="/schools/<%= school.id %>/edit" class="btn btn-warning">Modifier</a>
                        <form action="/schools/<%= school.id %>/delete" method="POST" style="display:inline;">
                            <button type="submit" class="btn btn-danger">Supprimer</button>
                        </form>
                        <% } %>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</div>
